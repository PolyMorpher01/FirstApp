<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

  </style>

  <style name="txt_title">
    <item name="android:textSize">40sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/lightText</item>
  </style>

  <style name="txt_login">
    <item name="android:textColor">@color/lightText</item>
    <item name="android:layout_marginTop">@dimen/x1</item>
  </style>

  <style name="edit_txt_login">
    <item name="android:background">@color/lightText</item>
    <item name="android:padding">@dimen/x1</item>
    <item name="android:layout_marginTop">@dimen/x1</item>
  </style>


  <style name="txt_login_btm">
    <item name="android:textColor">@color/lightText</item>
    <item name="android:layout_marginBottom">@dimen/x2</item>
  </style>

</resources>
